@model IEnumerable<BPR2_WebApp.Models.SoldProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sold products - @(DateTime.Now.ToShortDateString())</h1>

<p>
